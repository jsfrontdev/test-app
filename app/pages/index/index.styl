/*app-----*/
html
body
	height 100%
	display table
body
	background-image url(../images/bg.jpg)
	background-position 50%
	background-size cover
	position relative
	background-attachment fixed

	&:after
		content ''
		position absolute
		width 100%
		height 100%
		left 0
		top 0
		background-color rgba(255,255,255,.8s)
.wrapper
	position relative
	z-index  1
	padding-bottom 40px
	.lang-cards-title
		font-size 32px
		padding 20px 0px
		color #7f39fb
		font-weight bolder
		span
			padding 3px 10px
			border-radius 3px
			display inline-block
			background-color #7f39fb
			color #fff
			text-shadow none
			box-shadow 0px 5px 9px -2px rgba(0,0,0,0.4);
			margin-right 20px
			i
				padding-left 5px
.lang-cards
	transition all 0.2s
.lang-cards__col
	padding 0px 5px 
	transition all .2s
.lang-cards__card-box-wrapp
	padding 10px
	margin-bottom 10px
	text-align left
	box-shadow 0px 5px 9px -2px rgba(0,0,0,0.4);
	cursor pointer
	border-radius 3px
	transition all .5s
	background linear-gradient(to left, #3ebace, #4e4db9)
	text-align right
	&:hover .fa-edit
	&:hover .fa-trash-alt
		position relative
		opacity 1
		z-index 1
		position absolute
		transform translateX(0%)
	.fa-trash-alt
		color #484747
		display inline-block
		font-size 18px
		margin-bottom 10px
		left 10px
		bottom 5px
		position absolute
		opacity 0
		z-index -1
		transition all .2s
		padding 5px
		border-radius 3px
		box-shadow 0px 5px 9px -2px rgba(0,0,0,0.4);
		background-color #fff
		transform translateX(100%)


	&:hover
		transform translateY(-3px)
	.fa-edit
		color #484747
		display inline-block
		font-size 18px
		margin-bottom 10px
		right 10px
		position absolute
		opacity 0
		z-index -1
		transition all .2s
		padding 5px
		border-radius 3px
		box-shadow 0px 5px 9px -2px rgba(0,0,0,0.4);
		background-color #fff
		transform translateX(100%)

.lang-cards__warn-msg
	color #fff
	padding-top 5px
	float left
.lang-cards__card-box-wrapp.redact
	.lang-cards__redact
		display block
.lang-cards__card-description
	overflow hidden

.lang-cards__card-sourceText
.lang-cards__card-translation
	color #fff
.lang-cards__card-box
	text-align left

.lang-cards__redact
	text-align right
	display none
	.fa-check
		color #fff
		display inline-block
		font-size 24px
		margin 10px 5px
		margin-top 15px
	input
		background-color transparent !important
		color #fff
		border none
		border-bottom 1px solid #fff
		display block
		width 100%
		outline none
		transition all 0.2s
		padding 3px 
		margin-top 4px

	
		
.lang-cards__card-translation
	//position absolute
	z-index -1
	opacity 0
	transform translateX(-100%)
	//padding-top 5px
	//top 0
	
	
.lang-cards__card-box.translate
	transition all .2s
	.lang-cards__card-sourceText
		z-index -1
		opacity 0
		transform translateX(100%)
		//padding-top 5px
	.lang-cards__card-translation
		position relative
		opacity 1
		transform translateX(0%)
		z-index: 1;

.lang-cards__add-btn
	font-size: 23px;
	color: #fff;
	background-color: #7b7777;
	padding: 5px 10px;
	line-height: 1;
	margin-top: 10px;
	display: inline-block;
	border-radius: 50%;
	box-shadow 0px 4px 8px -1px rgba(0,0,0,0.3);
	cursor pointer
	margin-bottom 25px


